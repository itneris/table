{
  "compilerOptions": {
    "target": "es2016",
    "jsx": "react",
    "declaration": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "rootDir": "./src",
    "baseUrl": "./src"
  },
  "include": [
    "src/**/*"
  ]
}

